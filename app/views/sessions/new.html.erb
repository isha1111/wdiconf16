<div class = "login-container">
  <h1>Admin Login</h1>

  <%= form_for(:session, url: login_path) do |f| %>

    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit "Log in" , class: "btn"%>

  <% end %>
</div>
 
